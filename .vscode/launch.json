{
  "configurations": [
    {
      "name": "launch:backend",
      "request": "launch",
      "runtimeArgs": ["run-script", "start:ts", "--workspace", "backend"],
      "runtimeExecutable": "npm",
      "skipFiles": ["<node_internals>/**"],
      "type": "node"
    },
    {
      "name": "launch:frontend",
      "request": "launch",
      "runtimeArgs": ["run-script", "start:ts", "--workspace", "frontend"],
      "runtimeExecutable": "npm",
      "skipFiles": ["<node_internals>/**"],
      "type": "node"
    }
  ],
  "compounds": [
    {
      "name": "launch:all",
      "configurations": ["launch:backend", "launch:frontend"]
    }
  ]
}
